{
	"name": "adonis-provider-tester",
	"version": "1.0.1",
	"description": "Util for testing adonis provider",
	"scripts": {
		"clean": "del build",
		"lint": "eslint . --ext=.ts --fix",
		"compile": "npm run lint && npm run clean && tsc && npm run copy:files",
		"build": "npm run compile",
		"prepare": "npm run build",
		"copy:files": "cp 'src/adonis-app/source/.adonisrc.json' 'src/adonis-app/source/.env' 'build/src/adonis-app/source/'",
		"test": "jest test --runInBand --testTimeout 30000",
		"release": "np"
	},
	"author": "Vladyslav Parashchenko",
	"license": "MIT",
	"main": "build/index.js",
	"dependencies": {
		"@adonisjs/ace": "^11.0.1",
		"@adonisjs/core": "^5.1.7",
		"@adonisjs/logger": "^4.0.3",
		"@adonisjs/mrm-preset": "^4.0.1",
		"@poppinss/dev-utils": "^1.1.5"
	},
	"devDependencies": {
		"@types/jest": "^26.0.24",
		"@types/node": "^14.17.1",
		"adonis-preset-ts": "^2.1.0",
		"del-cli": "^4.0.1",
		"doctoc": "^1.4.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-adonis": "^1.3.3",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^4.3.8",
		"jest": "^27.0.6",
		"mrm": "^2.3.3",
		"np": "^6.3.2",
		"prettier": "^2.3.2",
		"ts-jest": "^27.0.4",
		"ts-mockito": "^2.6.1",
		"ts-node": "^10.2.0",
		"typescript": "^4.3.5",
		"pino-pretty": "^4.7.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "doctoc README.md --title='## Table of contents' && git add README.md",
			"commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validate-commit/conventional/validate.js"
		}
	}
}
