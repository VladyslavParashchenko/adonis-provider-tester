{
	"name": "adonis-provider-tester",
	"version": "2.0.0",
	"description": "Util for testing adonis provider",
	"scripts": {
		"clean": "del build",
		"lint": "eslint . --ext=.ts --fix",
		"compile": "npm run lint && npm run clean && tsc && npm run copy:files",
		"build": "npm run compile",
		"prepare": "npm run build",
		"copy:files": "mkdir -p build/src/adonis-app/source && cp 'src/adonis-app/source/.adonisrc.json' 'src/adonis-app/source/.env' 'build/src/adonis-app/source/'",
		"test": "jest test --runInBand --testTimeout 30000",
		"release": "np"
	},
	"author": "Vladyslav Parashchenko",
	"license": "MIT",
	"main": "build/index.js",
	"dependencies": {
		"@adonisjs/ace": "^11.3.1",
		"@adonisjs/core": "^5.8.4",
		"@adonisjs/fold": "^8.2.0",
		"@adonisjs/logger": "^4.1.4",
		"@adonisjs/mrm-preset": "^5.0.3",
		"@poppinss/file-generator": "1.0.1"
	},
	"devDependencies": {
		"@types/jest": "^27.0.3",
		"@types/node": "^14.17.1",
		"adonis-preset-ts": "^2.1.0",
		"del-cli": "^4.0.1",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-adonis": "^2.1.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^4.3.8",
		"jest": "^27.5.1",
		"mrm": "^4.0.0",
		"np": "^7.6.1",
		"prettier": "^2.6.2",
		"ts-jest": "^27.1.4",
		"ts-mockito": "^2.6.1",
		"ts-node": "^10.7.0",
		"typescript": "^4.5.5",
		"pino-pretty": "^7.6.1"
	},
	"husky": {
		"hooks": {
			"commit-msg": "node ./node_modules/@adonisjs/mrm-preset/validate-commit/conventional/validate.js"
		}
	}
}
