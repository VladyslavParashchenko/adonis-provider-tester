{
	"extends": "./node_modules/adonis-preset-ts/tsconfig",
	"compileOnSave": true,
	"include": [
		"**/*",
		"node_modules/@types/mocha/index.d.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	],
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "./",
		"sourceMap": true,
		"paths": {
			"App/*": [
				"./app/*"
			],
			"Config/*": [
				"./config/*"
			],
			"Contracts/*": [
				"./contracts/*"
			],
			"Database/*": [
				"./database/*"
			]
		},
		"types": [
			"@adonisjs/core"
		]
	},
	"files": [
		"./node_modules/@adonisjs/core/build/adonis-typings/index.d.ts",
		"node_modules/@types/jest/index.d.ts"
	]
}
